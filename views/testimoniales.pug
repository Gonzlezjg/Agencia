extends ./layout/index

block contenido
    main.container.mt-5.mb-5
        h1.text-center.mt-5=pagina
        blockquote.text-center Nuestros clientes cuentan su experiencia
        include ./layout/bloque_testimoniales


        .row 

            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonial 

                if(error)
                    each e in error
                        .alert.col.alert-danger.text-center= e.Alerta

            .row.justify-content-center.col
                .col-md-8 
                    form( action="/testimoniales" method="POST" )
                        .form-group 
                            label( for="nombre" ) Nombre 
                            input#nombre( type="text", placeholder="Escribe tu nombre", name="nombre", class="form-control", value= nombre )
                        .form-group
                            label( for="correo" ) Correo Electronico 
                            input#correo( type="email", placeholder="Escribe tu correo", name="correo", class="form-control", value= correo )
                        .form-group
                            label( for="mensaje" ) Mensaje
                            textarea#mensaje( name="mensaje",  rows="4" , class="form-control" , placeholder="Cuentanos tu experiencia" )= mensaje 

                        input.btn.btn-success.btn-block( type="submit" )